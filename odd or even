#include <stdio.h>

int main() {
    int num;
    
    printf("Enter numbers (enter 0 to stop):\n");
    
    while (1) {
        printf("Enter a number: ");
        scanf("%d", &num);
        
        if (num == 0)
            break;
        
        if (num % 2 == 0)
            printf("%d is even.\n", num);
        else
            printf("%d is odd.\n", num);
    }
    
    return 0;
}
